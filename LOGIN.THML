<!-- login.html (Local + Google) -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login • TCBA</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;margin:0;background:#fafafa;color:#111}
    .wrap{max-width:420px;margin:40px auto;padding:24px;background:#fff;border:1px solid #eee;border-radius:12px;box-shadow:0 8px 20px rgba(0,0,0,.06)}
    h1{margin:0 0 16px} h3{margin:16px 0 8px}
    form{display:grid;gap:10px} input{padding:10px;border:1px solid #ddd;border-radius:8px}
    button,a.btn{padding:10px 12px;border-radius:8px;background:#000;color:#fff;border:none;text-decoration:none;text-align:center;cursor:pointer}
    .divider{height:1px;background:#eee;margin:16px 0}
    .toplink{display:block;margin:8px auto 0;max-width:420px;text-align:center}
    .toplink a{color:#0066cc;text-decoration:none}
  </style>
</head>
<body>
  <div class="wrap">
    <h1>Welcome to TCBA</h1>

    <h3>Sign in</h3>
    <form action="/auth/local" method="POST">
      <input name="username" placeholder="Username" required />
      <input name="password" type="password" placeholder="Password" required />
      <button type="submit">Sign In</button>
    </form>

    <h3>Create account</h3>
    <form action="/auth/local/signup" method="POST">
      <input name="username" placeholder="Username" required />
      <input name="email" type="email" placeholder="Email (optional)" />
      <input name="password" type="password" placeholder="Password" required />
      <button type="submit">Sign Up</button>
    </form>

    <div class="divider"></div>

    <a class="btn" href="/auth/google">Continue with Google</a>
  </div>

  <div class="toplink">
    <a href="/homepage.html">← Back to Home</a>
  </div>
</body>
</html>
